<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Oluwaseye Oyadiran - Tech Professional & Entrepreneur</title>
    <link rel="stylesheet" href="/css/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Hero Section */
        .hero-container {
            position: relative;
            text-align: center;
            margin-bottom: 60px;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 25px;
        }

        .hero-image {
            width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .hero-overlay {
            position: absolute;
            top: 0; left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.45);
            backdrop-filter: blur(12px) saturate(150%);
            -webkit-backdrop-filter: blur(12px) saturate(150%);
            z-index: 1;
            transition: all 0.5s ease;
        }

        .hero-text-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #FFD700;
            z-index: 2;
            text-align: center;
            max-width: 90%;
            transition: all 0.5s ease;
        }

        .hero-text-overlay h1 {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 700;
            margin-bottom: 15px;
            letter-spacing: 1px;
            text-shadow: 0 2px 10px rgba(0,0,0,0.6);
        }

        .hero-text-overlay p {
            font-size: clamp(1rem, 2.5vw, 1.3rem);
            font-weight: 500;
            color: #FFF8DC;
            text-shadow: 0 1px 6px rgba(0,0,0,0.5);
        }

        /* Hover effect: remove overlay completely */
        .hero-container:hover .hero-overlay {
            background: transparent;
            backdrop-filter: none;
            -webkit-backdrop-filter: none;
        }

        .hero-container:hover .hero-image {
            transform: scale(1.05);
        }

        .hero-container:hover .hero-text-overlay h1,
        .hero-container:hover .hero-text-overlay p {
            text-shadow: 0 2px 6px rgba(0,0,0,0.3);
        }

        /* Article cards */
        .article-ul li {
            background-color: #1c1c1c;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: var(--border-radius);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .article-ul li:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

        .article-ul li a {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 500;
        }

        .article-list-date {
            color: var(--gray);
            font-size: 0.9rem;
        }

        /* Sort Dropdown - Fixed Styling */
        .sort-container {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .sort-group {
            display: flex;
            align-items: center;
            gap: 8px;
            
            padding: 8px 12px;
            border-radius: 8px;
        }

        .sort-container label {
            font-weight: 500;
            white-space: nowrap;
        }

        .sort-select {
            padding: 6px 10px;
            border-radius: 6px;
            border: 1px solid rgba(255, 255, 0, 0.3);
            background-color: rgba(0,0,0,0.9);
            color: #FFF8DC;
            font-weight: 500;
            cursor: pointer;
            min-width: 140px;
            transition: all 0.3s ease;
            margin-top: 16px;
        }

        .sort-select:hover, .sort-select:focus {
            background-color: rgba(0,0,0,1);
            border-color: rgba(255, 255, 0, 0.6);
            outline: none;
        }

        /* View All Button */
        .view-all-btn {
            padding: 8px 16px;
            background: rgba(255, 255, 0, 0.1);
            color: yellow;
            border: 1px solid rgba(255, 255, 0, 0.3);
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .view-all-btn:hover {
            background: rgba(255, 255, 0, 0.2);
            transform: translateY(-1px);
        }

        /* Scrollable container for View All */
        .scroll-container {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease;
        }

        .scroll-container.active {
            max-height: 600px; /* Adjust based on your needs */
            overflow-y: auto;
        }

        .scroll-container::-webkit-scrollbar {
            width: 8px;
        }

        .scroll-container::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.3);
            border-radius: 4px;
        }

        .scroll-container::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 0, 0.3);
            border-radius: 4px;
        }

        .scroll-container::-webkit-scrollbar-thumb:hover {
            background: rgba(255, 255, 0, 0.5);
        }

        /* Pagination */
        .pagination {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 18px;
            background: var(--black);
            color: yellow;
            border-radius: var(--border-radius);
            text-decoration: none;
            transition: background 0.2s;
        }

        .pagination:hover {
            background: var(--gray-light);
            color: var(--black);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-text-overlay h1 {
                font-size: clamp(1.8rem, 5vw, 2.5rem);
            }
            .hero-text-overlay p {
                font-size: clamp(1rem, 3vw, 1.2rem);
            }
            .article-ul li a {
                flex-direction: column;
                align-items: flex-start;
                gap: 8px;
            }
            .sort-container {
                flex-direction: column;
                align-items: flex-start;
            }
            .sort-group {
                width: 100%;
                justify-content: space-between;
            }
        }
    </style>
</head>
<body>

    <!-- Hero Section -->
    <div class="hero-container">
        <img src="/img/Cinc.jpg" alt="Oluwaseye Oyadiran" class="hero-image">

        <!-- Liquid-glass overlay -->
        <div class="hero-overlay"></div>

        <!-- Text Overlay -->
        <div class="hero-text-overlay">
            <h1>Hi, I am Oluwaseye Oyadiran</h1>
            <p>Tech Professional & Entrepreneur</p>
        </div>
    </div>

    <!-- Articles Section -->
    <section class="articles container">
        <h2 class="article__heading">Latest Posts</h2>

        <!-- Sort Dropdown and View All Button -->
        <div class="sort-container">
            <div class="sort-group">
                <label for="sortSelect">Sort by:</label>
                <select id="sortSelect" class="sort-select" onchange="sortPosts()">
                    <option value="newest" selected>Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="popular">Most Popular</option>
                </select>
            </div>
            
            <button class="view-all-btn" onclick="toggleViewAll()">View All Posts</button>
        </div>

        <!-- Regular posts list -->
        <ul id="articlesList" class="article-ul">
            <% if (data && data.length > 0) { %>
                <% data.forEach((post, index) => { %>
                    <li data-created="<%= post.createdAt %>" data-views="<%= post.views %>" 
                        <%= index >= 5 ? 'style="display: none;"' : '' %>>
                        <a href="/post/<%= post._id %>">
                            <span><%= post.title %></span>
                            <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
                        </a>
                    </li>
                <% }) %>
            <% } else { %>
                <li>No posts found.</li>
            <% } %>
        </ul>

        <!-- Scrollable container for View All -->
        <div id="scrollContainer" class="scroll-container">
            <ul id="allArticlesList" class="article-ul" style="display: none;">
                <!-- This will be populated with all posts when View All is clicked -->
            </ul>
        </div>

        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Other Posts</a>
        <% } %>
    </section>

    <script>
        let allPosts = [];
        let isViewAllActive = false;

        // Initialize all posts data
        function initializePosts() {
            const items = Array.from(document.querySelectorAll('#articlesList li'));
            allPosts = items.map(item => ({
                element: item,
                created: item.dataset.created,
                views: parseInt(item.dataset.views) || 0
            }));
        }

        function sortPosts() {
            const sortType = document.getElementById('sortSelect').value;
            const list = isViewAllActive ? document.getElementById('allArticlesList') : document.getElementById('articlesList');
            const items = Array.from(list.children);

            items.sort((a, b) => {
                if(sortType === 'newest') {
                    return new Date(b.dataset.created) - new Date(a.dataset.created);
                } else if(sortType === 'oldest') {
                    return new Date(a.dataset.created) - new Date(b.dataset.created);
                } else if(sortType === 'popular') {
                    return (parseInt(b.dataset.views) || 0) - (parseInt(a.dataset.views) || 0);
                }
            });

            // Remove old items
            while(list.firstChild) {
                list.removeChild(list.firstChild);
            }

            // Append sorted items
            items.forEach(item => list.appendChild(item));
        }

        function toggleViewAll() {
            const scrollContainer = document.getElementById('scrollContainer');
            const allArticlesList = document.getElementById('allArticlesList');
            const regularList = document.getElementById('articlesList');
            const viewAllBtn = document.querySelector('.view-all-btn');

            if (!isViewAllActive) {
                // Show all posts
                allArticlesList.innerHTML = regularList.innerHTML;
                allArticlesList.style.display = 'block';
                regularList.style.display = 'none';
                scrollContainer.classList.add('active');
                viewAllBtn.textContent = 'Show Less';
                isViewAllActive = true;
                
                // Show all items (remove display: none)
                const allItems = allArticlesList.querySelectorAll('li');
                allItems.forEach(item => item.style.display = '');
                
                // Sort the all posts list
                sortPosts();
            } else {
                // Return to regular view
                scrollContainer.classList.remove('active');
                setTimeout(() => {
                    allArticlesList.style.display = 'none';
                    regularList.style.display = 'block';
                    viewAllBtn.textContent = 'View All Posts';
                    isViewAllActive = false;
                }, 500);
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializePosts();
            
            // Initially show only first 5 posts
            const items = document.querySelectorAll('#articlesList li');
            items.forEach((item, index) => {
                if (index >= 5) {
                    item.style.display = 'none';
                }
            });
        });
    </script>

</body>
</html>