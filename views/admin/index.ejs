 <div style="
    min-height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
    background-color: #2C2C54;
    font-family: 'Poppins', sans-serif;
">

  <div style="
      width: 100%;
      max-width: 450px;
      padding: 40px 30px;
      background: rgba(255,255,255,0.05);
      backdrop-filter: blur(15px) saturate(180%);
      -webkit-backdrop-filter: blur(15px) saturate(180%);
      border: 1px solid rgba(255,255,255,0.15);
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.4);
      color: #fff;
  ">

    <!-- Tabs -->
    <div style="display:flex; justify-content:center; gap:20px; margin-bottom:35px; border-bottom:2px solid rgba(255,255,255,0.2); flex-wrap:wrap;">
      <button id="loginTab" class="active" onclick="switchForm('login')" style="
          flex:1;
          padding:12px 0;
          border:none;
          border-bottom:3px solid #fff;
          background:transparent;
          color:#fff;
          font-weight:600;
          cursor:pointer;
          transition: all 0.3s;
      ">Login</button>
      <button id="registerTab" onclick="switchForm('register')" style="
          flex:1;
          padding:12px 0;
          border:none;
          border-bottom:3px solid transparent;
          background:transparent;
          color:#ccc;
          font-weight:600;
          cursor:pointer;
          transition: all 0.3s;
      ">Register</button>
    </div>

    <!-- Login Form -->
    <form id="loginForm" method="POST" action="/admin" style="display:flex; flex-direction:column; gap:20px;">
        <h2 style="text-align:center; color:#FFD700; font-size:1.6rem; font-weight:700; letter-spacing:0.5px;">Login</h2>
        <input type="text" id="username" name="username" placeholder="Username" required style="
            padding:12px;
            border-radius:12px;
            border:none;
            background: rgba(255,255,255,0.1);
            color:#fff;
            font-weight:500;
            transition: all 0.3s;
        " onfocus="this.style.background='rgba(255,255,255,0.2)';" onblur="this.style.background='rgba(255,255,255,0.1)';">
        <input type="password" id="password" name="password" placeholder="Password" required style="
            padding:12px;
            border-radius:12px;
            border:none;
            background: rgba(255,255,255,0.1);
            color:#fff;
            font-weight:500;
            transition: all 0.3s;
        " onfocus="this.style.background='rgba(255,255,255,0.2)';" onblur="this.style.background='rgba(255,255,255,0.1)';">
        <button type="submit" style="
            padding:14px;
            border:none;
            border-radius:12px;
            background:#FFD700;
            color:#2C2C54;
            font-weight:700;
            cursor:pointer;
            transition: all 0.3s;
        " onmouseover="this.style.background='#e6c200';" onmouseout="this.style.background='#FFD700';">Login</button>
    </form>

    <!-- Register Form -->
    <form id="registerForm" action="/register" method="POST" style="display:none; flex-direction:column; gap:20px;">
        <h2 style="text-align:center; color:#FFD700; font-size:1.6rem; font-weight:700; letter-spacing:0.5px;">Register</h2>
        <input type="text" id="registerUsername" name="username" placeholder="Username" required style="
            padding:12px;
            border-radius:12px;
            border:none;
            background: rgba(255,255,255,0.1);
            color:#fff;
            font-weight:500;
            transition: all 0.3s;
        " onfocus="this.style.background='rgba(255,255,255,0.2)';" onblur="this.style.background='rgba(255,255,255,0.1)';">
        <input type="password" id="registerPassword" name="password" placeholder="Password" required style="
            padding:12px;
            border-radius:12px;
            border:none;
            background: rgba(255,255,255,0.1);
            color:#fff;
            font-weight:500;
            transition: all 0.3s;
        " onfocus="this.style.background='rgba(255,255,255,0.2)';" onblur="this.style.background='rgba(255,255,255,0.1)';">
        <button type="submit" style="
            padding:14px;
            border:none;
            border-radius:12px;
            background:#FFD700;
            color:#2C2C54;
            font-weight:700;
            cursor:pointer;
            transition: all 0.3s;
        " onmouseover="this.style.background='#e6c200';" onmouseout="this.style.background='#FFD700';">Register</button>
    </form>

  </div>
</div>

<script>
let currentTab = 'login';
function switchForm(tab){
    currentTab = tab;
    document.getElementById('loginForm').style.display = tab==='login'?'flex':'none';
    document.getElementById('registerForm').style.display = tab==='register'?'flex':'none';
    document.getElementById('loginTab').style.borderBottom = tab==='login'?'3px solid #FFD700':'3px solid transparent';
    document.getElementById('registerTab').style.borderBottom = tab==='register'?'3px solid #FFD700':'3px solid transparent';
    document.getElementById('loginTab').style.color = tab==='login'?'#fff':'#ccc';
    document.getElementById('registerTab').style.color = tab==='register'?'#fff':'#ccc';
}
</script>
