<header class="header">
    <a href="/" class="header__logo">Seye's Blog</a>

    <nav class="header__nav">
        <ul>
            <li>
                <a href="/" class="<%= isActiveRoute('/', currentRoute) %>">Home</a>
            </li>
            <li>
                <a href="/about" class="<%= isActiveRoute('/about', currentRoute) %>">About</a>
            </li>
            <li>
                <a href="/contact" class="<%= isActiveRoute('/contact', currentRoute) %>">Contact</a>
            </li>
        </ul>
    </nav>

    <!-- Sleek Inline Search -->
    <form action="/search" method="POST" class="search-form">
        <input 
            type="text" 
            name="searchTerm" 
            placeholder="Search..." 
            required
        >
        <button type="submit">Go</button>
    </form>

    <style>
        .header {
            position: sticky;
            top: 0;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 28px;

            background: rgba(17, 17, 17, 0.6);
            backdrop-filter: blur(12px) saturate(180%);
            -webkit-backdrop-filter: blur(12px) saturate(180%);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);

            color: #fff;
        }

        .header__logo {
            font-size: 1.4rem;
            font-weight: 700;
            text-decoration: none;
            color: yellow;
        }

        .header__nav ul {
            display: flex;
            gap: 20px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .header__nav a {
            text-decoration: none;
            color: #fff;
            font-weight: 500;
            font-size: 0.95rem;
            transition: color 0.2s;
        }

        .header__nav a:hover {
            color: yellow;
        }

        /* --- Sleek Search --- */
        .search-form {
            display: flex;
            align-items: center;
            gap: 6px;
            margin-left: 20px;
        }

        .search-form input {
            padding: 5px 10px;
            border-radius: 5px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.08);
            color: #fff;
            font-size: 0.85rem;
            outline: none;
            transition: border 0.25s, background 0.25s;
            height: 30px;
            margin-top: 18px;
        }

        .search-form input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .search-form input:focus {
            border: 1px solid yellow;
            background: rgba(0, 0, 0, 0.3);
        }

        .search-form button {
            padding: 5px 12px;
            border: none;
            border-radius: 5px;
            background: yellow;
            color: #000;
            font-size: 0.8rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, transform 0.15s;
        }

        .search-form button:hover {
            background: #f0c000;
            transform: translateY(-1px);
        }
    </style>
</header>
